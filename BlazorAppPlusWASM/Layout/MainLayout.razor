@inherits LayoutComponentBase
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <Header/>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>


@inject IStateService StateService

@code {
    protected override async Task OnInitializedAsync()
    {
        await StateService.LoadStateAsync();
    }
}